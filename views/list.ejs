<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>

    <link rel="stylesheet" href="css/styles.css">

</head>

<body>
    <div class="box" id="heading">
        <%= kindofDay %>
    </div>

    <div class="box">

        <% newListItems.forEach(function(item){ %>
            <form action="/deleteb" method="post">
                <div class="item">
                    <input type="checkbox" name ="checkBox" value="<%= item._id %>" onChange="submit()">
                    <p>
                        <%= item.name %>
                    </p>
                </div>
                <input type="hidden" name="listname" value="<%=kindofDay%>">
            </form>
                <% }); %>


            <form class="item" action="/" method="post">
                <input type="text" name="newItem" placeholder="Add new item" autocomplete="off">
                <button type="submit" name="list" value="<%=kindofDay %>">+</button>
            </form>
    </div>
</body>

</html>